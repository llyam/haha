#include<stdio.h>
#include<stdlib.h>

int cha(int *ch, int x) {
    if (ch[x] != x) {
    	ch[x] = cha(ch, ch[x]);
    }
    return ch[x];
}

void bing(int *ch, int x, int y) {
    int a1 = cha(ch, x), a2 = cha(ch, y);
    if (a1 != a2) {
        ch[a1] = a2;
    }
}

int main() {
    int ch[100001] = {0}, n, x, max = 0, ch1[100001] = {0};
    scanf("%d", &n);
    for (int i = 0; i < n; i++) {
        ch[i] = i;
    }
	for (int i = 0; i < n; i++) {
        scanf("%d", &x);
        bing(ch, x - 1, i);
    }
    for (int i = 0; i < n; i++) {
        ch1[cha(ch, i)]++;
    }
    for (int i = 0; i < n; i++) {
        if (ch1[i] > max) max = ch1[i];
    }
    printf("%d\n", max);
}
